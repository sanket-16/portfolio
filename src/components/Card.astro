---
export interface Props {
  title: string;
  description: string;
  github?: string;
  demo?: string;
  image: string;
}

const { github, demo, title, description, image } = Astro.props;
---

<div
  class="bg-light-purple p-10 rounded-xl flex flex-col gap-6 h-full justify-between"
>
  <a href={demo}>
    <img
      src={image}
      alt="project image"
      class="rounded-md hover:scale-105 transition-all"
    />
  </a>
  <h3 class="font-bold text-xl">{title}</h3>
  <p class="whitespace-wrap">
    {description}
  </p>
  <div class="flex gap-6">
    {
      demo !== undefined && (
        <div class="relative group">
          <span
            class="group-hover:opacity-100 transition-opacity bg-dark-blue p-1 text-sm text-gray-100 rounded-md absolute left-1/2 
    -translate-x-1/2 -translate-y-[180%] opacity-0 m-4 mx-auto"
          >
            Demo
          </span>
          <a href={demo} class="hover:scale-125 transition-all" target="_blank">
            <img src="/demo.svg" />
          </a>
        </div>
      )
    }
    {
      github !== undefined && (
        <div class="group relative">
          <span
            class="group-hover:opacity-100 transition-opacity bg-dark-blue p-1 text-sm text-gray-100 rounded-md absolute left-1/2 
    -translate-x-1/2 -translate-y-[180%] opacity-0 m-4 mx-auto"
          >
            Github
          </span>
          <a
            href={github}
            class="hover:scale-125 transition-all"
            target="_blank"
          >
            <img src="/github.svg" />
          </a>
        </div>
      )
    }
  </div>
</div>
<style></style>
