---
export interface Props {
  skill: string;
  image: string;
  hover: string;
}
const { skill, image, hover } = Astro.props;
---

<div
  class="skill-card hover:border-2 rounded-md transition-all p-4 flex flex-col items-center gap-4 h-40 w-40 justify-center"
>
  <div class="icon">
    <img src={image} alt="Icon" class="w-12" />
  </div>
  <div
    class="opacity-0 skill-text transition-all font-bold text-pre-wrap text-center"
  >
    {skill}
  </div>
  <style></style>
</div>
